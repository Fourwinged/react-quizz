{
    "env": {
        "browser": true,
        "commonjs": true
    },

    "globals": {
    },


    "plugins": [
        "react"
    ],

    "ecmaFeatures": {
        "arrowFunctions": true,
        "classes": true,
        "destructuring": true,
        "defaultParams": true,
        "modules": true,
        "jsx": true,
        "objectLiteralComputedProperties": true,
        "spread": true,
        "superInFunctions": true
    },

    "rules": {

        // Possible errors

        "comma-dangle": [2, "never"],
        "no-cond-assign": [2, "except-parens"],
        "no-console": 1,
        "no-constant-condition": 2,
        "no-control-regex": 2,
        "no-debugger": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty-character-class": 2,
        "no-empty": 2,
        "no-ex-assign": 2,
        "no-extra-boolean-cast": 2,
        //"no-extra-parens": [1, "all"],
        "no-extra-semi": 1,
        "no-func-assign": 2,
        "no-inner-declarations": 2,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": 2,
        "no-negated-in-lhs": 2,
        "no-obj-calls": 2,
        "no-regex-spaces": 2,
        "no-sparse-arrays": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        "valid-jsdoc": 1,
        "valid-typeof": 2,
        "no-unexpected-multiline": 2,


        // Best practices

        "block-scoped-var": 1,
        "curly": 2,
        "default-case": 2,
        "dot-notation": 1,
        "eqeqeq": [1, "smart"],
        "guard-for-in": 1,
        "no-alert": 1,
        "no-caller": 2,
        "no-div-regex": 1,
        "no-else-return": 1,
        "no-eq-null": 1,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 1,
        "no-fallthrough": 1,
        "no-implicit-coercion": 1,
        "no-implied-eval": 2,
        "no-invalid-this": 1,
        "no-iterator": 2,
        "no-labels": 1,
        "no-lone-blocks": 1,
        "no-loop-func": 1,
        "no-multi-spaces": 1,
        "no-multi-str": 1,
        "no-native-reassign": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-new": 2,
        "no-octal-escape": 2,
        "no-octal": 2,
        "no-param-reassign": 1,
        "no-redeclare": 2,
        "no-return-assign": 2,
        "no-self-compare": 2,
        "no-sequences": 1,
        "no-throw-literal": 1,
        "no-unused-expressions": 2,
        "no-useless-call": 1,
        "no-useless-concat": 1,
        "no-with": 2,
        "wrap-iife": 2,
        "yoda": 1,

        // Variables
        "no-catch-shadow": 2,
        "no-delete-var": 2,
        "no-shadow-restricted-names": 2,
        "no-shadow": [2, {"builtinGlobals": true, "hoist": "all"}],
        "no-undef-init": 1,
        "no-unused-vars": 1,
        "no-use-before-define": 2,


        // Stylistic consistency

        "array-bracket-spacing": 1,
        "brace-style": [1, "stroustrup", { "allowSingleLine": true }],
        "camelcase": [1, {properties: "never"}],
        "comma-spacing": 1,
        "comma-style": 1,
        "computed-property-spacing": 1,
        "consistent-this": 1,
        "eol-last": 1,
        "block-spacing": 1,
        "func-style": [1, "declaration"],
        "indent": [1, 4, {"SwitchCase": 1, "VariableDeclarator": 1}],
        "max-nested-callbacks": [2, 3],
        "new-cap": 1,
        "new-parens": 2,
        "no-array-constructor": 2,
        "no-continue": 2,
        "no-lonely-if": 1,
        "no-mixed-spaces-and-tabs": 1,
        "no-multiple-empty-lines": [2, {"max": 2}],
        "no-nested-ternary": 2,
        "no-new-object": 2,
        "no-spaced-func": 1,
        "no-trailing-spaces": [1, { "skipBlankLines": true }],
        "object-curly-spacing": 1,
        "one-var": [1, {"uninitialized": "always", "initialized": "never"}],
        "operator-linebreak": [1, "before"],
        "quote-props": [1, "consistent"],
        "quotes": [1, "single"],
        "semi-spacing": 1,
        "semi": 2,
        "space-before-blocks": 1,
        "space-before-function-paren": [1, "never"],
        "space-in-parens": 1,
        "space-infix-ops": 1,
        "space-return-throw-case": 1,
        "space-unary-ops": 1,
        "spaced-comment": 1,
        "wrap-regex": 1,


        // ES2015 specific

        "arrow-parens": 2,
        "arrow-spacing": 1,
        "constructor-super": 2,
        "no-class-assign": 2,
        "no-const-assign": 2,
        "no-dupe-class-members": 2,
        "no-this-before-super": 2,
        "prefer-arrow-callback": 1,
        //"prefer-template": 1,


        // React & JSX specific

        "react/display-name": [2, { "acceptTranspilerName": true }],
        "react/jsx-boolean-value": [1, "always"],
        "react/jsx-closing-bracket-location": [1, {"location": "after-props"}],
        "react/jsx-curly-spacing": [1, "always"],
        "react/jsx-no-duplicate-props": 2,
        "react/jsx-no-undef": 2,
        "react/jsx-quotes": [1, "double"],
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/no-did-mount-set-state": 1,
        "react/no-did-update-set-state": 1,
        "react/no-multi-comp": 2,
        "react/no-unknown-property": 2,
        "react/prop-types": 1,
        "react/react-in-jsx-scope": 2,
        "react/self-closing-comp": 1,
        "react/sort-comp": 1,
        "react/require-extension": [2, { "extensions": [".js", ".jsx"] }],
        "react/wrap-multilines": 2,
    }
}